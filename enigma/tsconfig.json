{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": false,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": [
    "main/**/*",
    "renderer/**/*",
    "shared/**/*",
    "vite.config.mts",
    "env.d.ts"
  ],
  "exclude": ["node_modules", "dist", "dist-electron", "dist-build", "build"]
}
